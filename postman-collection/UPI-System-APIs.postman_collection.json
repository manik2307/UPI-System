{
  "info": {
    "name": "UPI Payment System APIs",
    "description": "Complete API collection for testing UPI payment system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "basic",
    "basic": [
      {
        "key": "username",
        "value": "user",
        "type": "string"
      },
      {
        "key": "password",
        "value": "user123",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "User Management",
      "item": [
        {
          "name": "Register New User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"upiId\": \"testuser@paytm\",\n  \"phoneNumber\": \"9876543213\",\n  \"name\": \"Test User\",\n  \"bankCode\": \"BANK_A\",\n  \"accountNumber\": \"ACC004\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/upi/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "upi", "register"]
            }
          }
        },
        {
          "name": "Validate User by UPI ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/api/upi/validate?identifier=john@paytm",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "upi", "validate"],
              "query": [
                {
                  "key": "identifier",
                  "value": "john@paytm"
                }
              ]
            }
          }
        },
        {
          "name": "Validate User by Phone Number",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/api/upi/validate?identifier=9876543210",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "upi", "validate"],
              "query": [
                {
                  "key": "identifier",
                  "value": "9876543210"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Transfer Money",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"senderUpiId\": \"john@paytm\",\n  \"receiverUpiId\": \"jane@phonepe\",\n  \"amount\": 1000.00,\n  \"description\": \"Payment for dinner\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/upi/transfer",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "upi", "transfer"]
            }
          }
        },
        {
          "name": "Get Transaction Status",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/api/upi/transaction/{{transactionId}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "upi", "transaction", "{{transactionId}}"]
            }
          }
        },
        {
          "name": "Get Transaction History",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:8080/api/upi/transactions/john@paytm",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "upi", "transactions", "john@paytm"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Operations",
      "auth": {
        "type": "basic",
        "basic": [
          {
            "key": "username",
            "value": "admin",
            "type": "string"
